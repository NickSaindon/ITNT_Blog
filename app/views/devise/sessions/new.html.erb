<div class="container login">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-2 col-md-4 col-md-offset-4">

         <div class="account-wall">         
            <h2 class="form-signin-heading text-center">ITNT Signin</h2>

              <div class= "profile-img"></div>

                <%= form_for(resource, class: 'form-signin', as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="field">
                    <%= f.email_field :email, class: 'form-control', placeholder: 'Email', autofocus: true %>
                  </div>

                  <div class="field">
                    <%= f.password_field :password, class: 'form-control', placeholder: 'Password', autocomplete: "off" %>
                  </div>

                <label>
                  <% if devise_mapping.rememberable? -%>
                    <div class="field remember">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end -%>
                </label>

                  <div class="actions">
                    <%= f.submit "Sign in", class: 'btn btn-lg btn-default btn-block' %>
                  </div>
                <% end %>

                <div class="forgot-signin">
                  <%= render "devise/shared/links" %>
                </div>

          </div>
        </div>
    </div>
</div>