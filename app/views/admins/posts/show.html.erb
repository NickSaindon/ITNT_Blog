<% provide(:page_title, @post.title) %>
<% provide(:admin, 'active') %>

<%= render 'shared/adminNavbar' %>

<div class="container-fluid">

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
      <div>
        <%= link_to 'Edit', edit_admins_post_path(@post), class: 'btn btn-sm btn-warning' %>
        <%= link_to 'Remove', admins_post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
      </div>

        <div class="row">
            <h1><%= @post.title %></h1>
            <p><%= @post.try(:request_date).try(:strftime, '%B %e, %Y') %></p>
            <%= @post.body.html_safe %>
        </div>
    </div>
  </div>

</div>