                    <% end %>
                </div>
                <div class="col-md-3 col-sm-6">
                    <%= link_to 'http://sass-lang.com/', :target => "_blank" do %>
                    <%= image_tag 'logo_Sass.jpg', class: 'img-responsive img-centered', alt: 'a face that is unnervingly happy'%>
                    <% end %>
                </div>
                <div class="col-md-3 col-sm-6">
                    <%= link_to 'https://www.ruby-lang.org/en/', :target => "_blank" do %>
                    <%= image_tag 'logo_ruby.jpg', class: 'img-responsive img-centered', alt: 'a face that is unnervingly happy'%>
                    <% end %>
