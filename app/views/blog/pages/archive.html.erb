<!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                <%= link_to 'ITNT Blog', root_path %>
                    <small>Archive</small>
                </h1>
            </div>
        </div>
        <!-- /.row -->
            <ol class="breadcrumb">
             <li><%= link_to 'Home', root_path, class: 'btn btn-default btn-lg light2' %></li>
            </ol>
     

        <% @posts.each do |post| %>
        <!-- Project One -->
        <div class="row">
            <div class="col-md-7">
                <a href="#">
                    <div class="archive-img" style='background-image: url(<%= post.banner_image_url %>);'></div>
                </a>
            </div>
            <div class="col-md-5">
                <h3><%= post.title %></h3>
                <h4><%= post.display_day_published %></h4>
                <p><%= truncate(post.description, length: 250) %></p>
                <%= link_to 'View Project', post, class: 'btn btn-default light2' %>
            </div>
        </div>
        <!-- /.row -->

        <hr>
        <% end %>

        <!-- Pagination -->
        <div class="row text-center">
            <div class="col-lg-12">
                <div class="digg_pagination">
                        <%= will_paginate @posts %>
                </div>
            </div>   
        </div>
        <!-- /.row -->

    </div>